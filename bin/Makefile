INCLUDE_DIR = ../include
LIB_DIR = ../lib
SRC_DIR = ../src
SDL:
	gcc -I$(INCLUDE_DIR) -L$(LIB_DIR) $(SRC_DIR)/*.c -o clicktopia.exe -lSDL2 -lSDL2main -lSDL2_image -lSDL2_ttf -lSDL2_mixer

OPENGL:
	gcc -I$(INCLUDE_DIR) -L$(LIB_DIR) $(SRC_DIR)/*.c -o clicktopia.exe -lSDL2 -lSDL2main -lSDL2_image -lSDL2_ttf -lSDL2_mixer